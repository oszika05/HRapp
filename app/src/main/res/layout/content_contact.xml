<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_program"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.oscar.radio.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_facebook"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:elevation="3dp"
                card_view:cardCornerRadius="2dp">
        <!-- TODO scroll -->
                <RelativeLayout
                    android:id="@+id/facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thumbnail_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        />

                    <TextView
                        android:id="@+id/titleFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail_facebook"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="#4c4c4c"
                        android:textSize="15sp"
                        android:text="Lájkolj minket facebookon!" />

                    <TextView
                        android:id="@+id/descFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleFacebook"
                        android:layout_marginBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#6c6c6c"
                        android:textSize="12sp"
                        android:text="Már több, mint 33 ezer ember követ minket!" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_phone"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_facebook"
                android:elevation="3dp"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thumbnail_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:adjustViewBounds="true"

                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/titlePhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail_phone"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="#4c4c4c"
                        android:textSize="15sp"
                        android:text="Hívj minket telefonon!" />

                    <TextView
                        android:id="@+id/descPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titlePhone"
                        android:layout_marginBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#6c6c6c"
                        android:textSize="12sp"
                        android:text="Telefonszámunk +36 1 431 7010\nHívj minket bátran!" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_mail"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                app:cardUseCompatPadding="true"
                android:layout_below="@+id/card_view_phone"
                card_view:cardCornerRadius="2dp">

                <RelativeLayout
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thumbnail_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:adjustViewBounds="true"

                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/titleMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail_mail"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="#4c4c4c"
                        android:textSize="15sp"
                        android:text="Írj nekünk emailt!" />

                    <TextView
                        android:id="@+id/descMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleMail"
                        android:layout_marginBottom="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#6c6c6c"
                        android:textSize="12sp"
                        android:text="Kérdésed van a pásztorhoz? .." />


                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
