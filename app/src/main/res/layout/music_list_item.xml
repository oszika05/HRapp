<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/musicListItem"
    android:clickable="true"
    android:layout_height="72dp"
    android:padding="6dp" >

    <TextView
        android:id="@+id/musicListItemTitle"
        android:textColor="#DD000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/musicListItemTime"
        android:gravity="center_vertical"
        android:text="Title"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/musicListItemDate"
        android:textColor="#61000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicListItemTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Date"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/musicListItemDesc"
        android:textColor="#89000000"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/musicListItemTitle"
        android:layout_toLeftOf="@id/musicListItemDate"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicListItemTitle"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Artist"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/musicListItemTime"
        android:textColor="#89000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="Time"
        android:textSize="13sp" />

</RelativeLayout>